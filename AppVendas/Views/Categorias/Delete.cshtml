@model AppVendas.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />

        <input type="submit" value="Excluir" class="btn btn-danger mt-3 px-5 py-3 me-3" />

        <a asp-action="Index" class="btn btn-outline-info d-flex align-items-center px-3 mt-3 w-100 justify-content-center py-1">
            <ion-icon name="caret-back"></ion-icon>Voltar
        </a>
    </form>
</div>
